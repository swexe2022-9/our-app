<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3" style="background-color:#66CC66">
    <a class="my-0 mr-md-auto font-weight-normal" href="/">TechCh</a>
    <nav class="my-2 my-md-0 mr-md-3">
        <nav class="navbar navbar-expand-lg" style="background-color:#66CC66">
            <div class="container-fluid" >
    
                <%= form_with url: search_path, method: :get, local: true do |f| %>
                <%= f.text_field :keyword, value: @keyword %>
                <%= f.submit "検索" %>
                <% end %>
                  
                
                <% if session[:login] %>
                  
                  <a class="p-2 text-dark" href="#"><%= link_to 'ブログ作成', new_blog_path %></a>
                  <a class="p-2 text-dark" href="#"><%=link_to 'ブログ一覧' , blogs_path %></a>
                    <a class="p-2 text-dark" href="#"><%=link_to 'スレッド一覧' , threads_path %></a>
                    <a class="p-2 text-dark" href="#"><%= link_to 'ログアウト', top_logout_path %></a>
                <% else %>
                    <a class="p-2 text-dark" href="#"><%=link_to '新規登録' , users_new_path %></a>
                    <a class="p-2 text-dark" href="#"><%=link_to 'ログイン' , top_login_path %></a>
                    <a class="p-2 text-dark" href="#"><%=link_to 'ブログ一覧' , blogs_path %></a>
                    <a class="p-2 text-dark" href="#"><%=link_to 'スレッド一覧' , threads_path %></a>
                <% end %>
                
            </div>
        </nav>
    </nav>

</div>

<div style ="width: 800px; margin: auto; padding:10px 10px; text-align:center;">
<%= form_for @threads , url: {action: :create} do |f| %>
<p><%= f.label :title,"タイトル" %></p>
<p><%= f.text_area :title,size: "80x1" %></p>
<p><%= f.label :image, '画像' %></p>
<p><%= f.file_field :image %></p>
<p><%= f.submit '投稿' %></p>
<% end %>
</div>