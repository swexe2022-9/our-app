                    <a class="p-2 text-dark" href="#"><%=link_to 'ブログ一覧' , blogs_path , class: 'button' %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</a>
                    </span>
                <% end %>
                
            </div>
        </nav>
    </nav>
</div>

