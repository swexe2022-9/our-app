<% if @users.errors.any? %>
<h3>エラーがあります。</h3>
<ul style="color: red">
<% @users.errors.full_messages.each do |err| %>
<body>
<li><%= err %></li>
<% end %>
</ul>
<% end %>

<%= form_for @users , url: {action: :create} do |f| %>
<p>
<center>
<%= f.label :uname, 'USER NAME:' %>
<%= f.text_field :uname %><br><br><br><br><br>
<%= f.label :email, 'MAIL:' %>
<%= f.text_field :email %><br><br><br><br><br>
<%= f.label :password_confirmation, 'PASSWORD:' %>
<%= f.password_field :password_confirmation %><br><br><br><br><br>
<%= f.label :password, 'PASSWORD:' %>
<%= f.password_field :password %><br><br><br><br><br>
<%= f.submit 'JOIN', class: 'topbutton' %>
</center>
</p>
<% end %>
</body>
